sumUpTo = n -> (n * (n+1)) div 2
fac = n -> if (n==0) 1 else n * fac (n-1)
fib = n -> {
  var a <- 0
  var b <- 1
  var i <- 0
  while (i < n) {
    tmp = a
    a <- a+b
    b <- tmp
    i <- i+1
  }
  a
}

id = x -> x

list = xs* -> xs

while = ~cond ~f -> if cond {f; while ~cond ~f}

compose = a b -> x -> a (b (x))

